---
import dayjs from "dayjs";
import utc from "dayjs/plugin/utc";
import timezone from "dayjs/plugin/timezone";
import IconCalendar from "@/assets/icons/IconCalendar.svg";
import { SITE } from "@/config";

dayjs.extend(utc);
dayjs.extend(timezone);

export interface Props {
  class?: string;
  size?: "sm" | "lg";
  timezone: string | undefined;
  pubDatetime: string | Date;
}

const {
  pubDatetime,
  size = "sm",
  class: className = "",
  timezone: postTimezone,
} = Astro.props;

/* ========== Formatted Datetime ========== */

const datetime = dayjs(pubDatetime).tz(
  postTimezone || SITE.timezone
);

const day = datetime.format("D.MM");
const year = datetime.format("YYYY");

---


  <time
    class:list={["text-base font-sans font-bold bg-(--foreground) text-(--background) mr-2", { "sm:text-sm": size === "lg" }]}
    datetime={datetime.toISOString()}>
      <div>{day}</div>
      <div>{year}</div>
    </time
  >

